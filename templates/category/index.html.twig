{% extends 'base.html.twig' %}

{% block title %}Categories list{% endblock %}

{% block body %}
    
    <div class="container ">
        <h1 class="my-5">Categories list</h1>

        <a href="{{ path('new_category')}}" class="btn btn-primary my-3 rounded-pill">Add a new category</a> <br>

        <table class="table table-hover">
            <thead>
                <tr class="table-primary">
                <th scope="col">#</th>
                <th scope="col">Categories</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
            {% for category in Categories %}
                <tr class="table-light">
                <th scope="row">{{ loop.index}}</th>
                <td> <a href="{{ path('show_category', {'id':category.id}) }} ">{{ category.name }}</a></td>
                <td>  <a href="{{ path('edit_category', {'id':category.id}) }}" class="btn btn-info px-3 rounded-pill"> Edit</a></td>
                <td><a href="{{ path('delete_category', {'id':category.id}) }}" class="btn btn-danger px-3 rounded-pill">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    

{% endblock %}
