{% extends 'base.html.twig' %}

{% block title %}Training list{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>Trainings list</h1>

        <a href="{{ path('new_training')}}" class="btn btn-success m-2"> Add a new training</a> <br>

        {% for training in trainings %}
           <a href="{{ path('show_training', {'id':training.id}) }}">{{ training.name }}</a>
           <a href="{{ path('edit_training', {'id':training.id}) }}" class="btn btn-info m-2"> Edit</a>  
           <a href="{{ path('delete_training', {'id':training.id}) }}" class="btn btn-danger m-2">Delete</a>  <br>
        {% endfor %}
    </div>
{% endblock %}
