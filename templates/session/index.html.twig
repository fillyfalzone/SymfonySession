{% extends 'base.html.twig' %}

{% block title %}Sessions list{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>Sessions list</h1>

        <a href="{{ path('new_session')}}" class="btn btn-success m-2">Add a new session</a> <br>

        {% for session in sessions %}
            <a href="{{ path('show_session', {'id':session.id})}}" class=" fs-4 "> {{ session }} </a>
            <a href="{{ path('edit_session', {'id':session.id}) }}" class="btn btn-info m-2">Edit</a>
            <a href="{{ path('delete_session', {'id':session.id}) }}" class="btn btn-danger m-2">Delete</a> <br>
        {% endfor %}
    </div>
{% endblock %}
